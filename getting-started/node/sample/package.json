{
  "name": "framework-for-building-libraries",
  "version": "1.0.0",
  "description": "A framework for building js libraries using TS and SCSS",
  "main": "./dist/my-library.js",
  "types": "./dist/my-library.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:dev": "webpack --mode=development --watch --progress",
    "build:prod": "webpack --mode=production",
    "prepublishOnly": "webpack --mode=production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeoPablo/framework-for-building-libraries.git"
  },
  "keywords": [
    "framework",
    "typescript",
    "scss",
    "npm"
  ],
  "author": "Stan Georgian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GeoPablo/framework-for-building-libraries/issues"
  },
  "homepage": "https://github.com/GeoPablo/framework-for-building-libraries#readme",
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
